<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BuildAnApp"
    tools:showIn="@layout/activity_build_an_app">

    <TextView
        android:id="@+id/tv1"
        android:text="Do you want to develop an app in 2019?"
        android:textSize="32sp"
        android:fontFamily="serif"
        android:gravity="center"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        app:cardCornerRadius="60dp"
        android:layout_marginTop="64dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toLeftOf="@id/tv1"
        app:layout_constraintRight_toRightOf="@id/tv1"
        android:layout_width="120dp"
        android:layout_height="120dp">

        <ImageView
            android:src="@drawable/pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

    <TextView
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Mr K. Mabhena, renowned android developer."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv2"
        android:textSize="21sp"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="Join me Mr K. Mabhena as I teach young girls how to develop Android apps and publish them on the Play Store."
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintLeft_toLeftOf="@id/tv1"
        app:layout_constraintRight_toRightOf="@id/tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="28sp"
        android:fontFamily="serif"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="Attend my 2 weeks boot camp and learn more!!"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        app:layout_constraintLeft_toLeftOf="@id/tv1"
        app:layout_constraintRight_toRightOf="@id/tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>